<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


        <template id="invoice_smc_without_id">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <style>
                            .p1{
                            margin-top:-20px;
                            font-size:15px;
                            font-weight:700;

                            }
                            span{
                            margin-top:-20px;
                            font-size:15px;
                            font-weight:normal;
                            <!--                        padding-right:50px;-->
                            }
                            .p2{
                            margin-top:-20px;
                            font-size:12px;
                            padding-right:100px;


                            }
                            .pcen{
                            float:right;
                            font-width:bold;
                            }
                            .r1{
                            border:1px solid
                            }
                            .div_headings {
                            border:1px solid;
                            text-align: center;
                            font-size:15px;
                            margin-top:2em;
                            vertical-align:middle;
                            }
                            .div_tb {
                            border:1px solid;
                            text-align: center;
                            font-size:10px;
                            }
                            table tr{
                            <!--                        height:10%;-->
                            }

                        </style>


                        <div class="container">
                            <div class="container">
                                <div class="row">
                                    <div class="col-9">
                                        <p class="p1">Invoice No.
                                            :
                                            <span class='p2' t-field="o.name" style="padding-left:45px;"/>
                                        </p>
                                        <p class="p1">Invoice Date
                                            :
                                            <span class='p2' t-field="o.invoice_date" style="padding-left:35px;"/>
                                        </p>
                                        <p class="p1">Customer

                                            :
                                            <span class='p2' t-field="o.partner_id" style="padding-left:55px;"/>
                                        </p>
                                        <p class="p1">Shipping Address:
                                            <span class='p2' t-field="o.partner_id.street" style="padding-left:5px;"/>
                                            <span class='p2' t-field="o.partner_id.city" style="padding-left:5px;"/>
                                            <span class='p2' t-field="o.partner_id.country_id"
                                                  style="padding-left:5px;"/>
                                        </p>
                                        <p class="p1">Detail
                                            :
                                            <span class='p2' t-field="o.partner_id.street"
                                                  style="padding-left:80px;"/>
                                        </p>
                                    </div>
                                    <div class="col-3 ">
                                        <p class="p1">Do # :
                                            <!--                                        <span class='p2' t-field="o.invoice_date"/>-->
                                        </p>
                                        <p class="p1">CNIC #
                                            :
                                            <span class='p2' t-field="o.partner_id.no_cnic"/>
                                        </p>
                                        <p class="p1">NTN # :
                                            <span class='p2' t-field="o.partner_id.ntn"/>

                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="container" width="100%">
                                <table class="table table-bordered table-sm " style="margin-top:5px; ">

                                    <tr style="font-size:12px;text-align:left;">
                                        <th>
                                            <strong>Sr</strong>
                                        </th>
                                        <th>
                                            <strong>Item Description</strong>
                                        </th>
                                        <th>
                                            <strong>Article</strong>
                                        </th>
                                        <th>
                                            <strong>Finish</strong>
                                        </th>
                                        <th class="text-center div_headings">
                                            <strong>Unit</strong>
                                        </th>
                                        <th>
                                            <strong>Quantity</strong>
                                        </th>
                                        <th>
                                            <strong>Rate</strong>
                                        </th>
                                        <th class="text-center div_headings">
                                            <strong>Amount</strong>
                                        </th>
                                        <th>
                                            <strong>After D.Amnt</strong>

                                        </th>
                                    </tr>

                                    <tbody>
                                        <t t-set="count_id" t-value="0"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                        <t t-set="total_quantity" t-value="0"/>
                                        <t t-set="total_amount" t-value="0"/>
                                        <t t-set="after_dic" t-value="0"/>


                                        <t t-foreach="o.invoice_line_ids" t-as="line">
                                            <t t-set="current_subtotal"
                                               t-value="current_subtotal + line.price_subtotal"
                                               groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <t t-set="current_subtotal"
                                               t-value="current_subtotal + line.price_total"
                                               groups="account.group_show_line_subtotals_tax_included"/>

                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                                style="text-align:center;"/>
                                            <t t-if="not line.display_type">
                                                <t t-set="count_id" t-value="count_id+1"/>
                                                <td name="td_id" class="text-center"
                                                    style="padding:0px; height:0%; font-size:12px;border:1px solid lightgrey;vertical-align:center;text-center;">
                                                    <t t-esc="count_id"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.article_no"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.finish_no"/>
                                                    <!--                                                    <span t-field="line.partner_id.company_id.finish_no"/>-->
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_uom_id"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.price_unit"/>
                                                    <!--                                                    <span t-field="line.product_id.list_price"/>-->
                                                </td>
                                                <td class="div_tb">
                                                    <t t-set="amount_price"
                                                       t-value="(line.price_unit * line.quantity)"/>
                                                    <t t-esc="amount_price"/>
                                                </td>
                                                <td class="all_border">
                                                    <span t-field="line.price_subtotal"/>

                                                    <!--                                                    <t t-set="after_dis"-->
                                                    <!--                                                       t-value="(amount_price - line.discount)"/>-->
                                                    <!--                                                    <t t-esc="after_dis"/>-->
                                                </td>
                                                <t t-set="total_quantity" t-value="total_quantity+line.quantity"/>
                                                <t t-set="total_amount" t-value="total_amount+amount_price"/>
                                                <t t-set="after_dic" t-value="after_dic+line.price_subtotal"/>
                                            </t>

                                            <t t-if="line.display_type == 'line_section'">
                                                <td class="div_tb"
                                                    style="padding:0px; height:0%; background-color: black; color: white; text-align:left; text-transform:uppercase;font-weight:bold; padding-left:35px;border:1px solid black;"
                                                    name="td_section_line" colspan="99">
                                                    <span t-field="line.name"/>
                                                </td>
                                                <t t-set="current_section" t-value="line"/>
                                                <t t-set="current_subtotal" t-value="0"/>
                                            </t>
                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99" class="div_tb"
                                                    style="padding:0px; height:0%;">
                                                    <span t-field="line.name"/>
                                                </td>
                                            </t>
                                            <div>
                                                <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                                    <tr class=" text-right" style="padding:0;">
                                                        <td name="td_section_subtota1l" colspan="99"
                                                            style="padding:0;">
                                                            <strong style="padding-right:240px; font-size:15px;"
                                                                    class="mr16">Subtotal:
                                                            </strong>
                                                            <span style="padding-right:25px;"
                                                                  t-esc="current_subtotal"
                                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </div>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="container">
                                    <table width="100%" style="margin-top:-10px;">
                                        <tbody>
                                            <tr>
                                                <td width="5%">
                                                </td>
                                                <td width="25%">
                                                </td>
                                                <td width="8%"></td>
                                                <td width="8%"
                                                    style="font-weight:bold; padding-right:10px; text-align: right; font-size:14px; margin-top:10px">
                                                    Total :
                                                </td>
                                                <td width="5%">
                                                </td>
                                                <td width="8%"
                                                    style="; padding-left:15px; text-align: right; font-weight:bold; font-size:14px;">
                                                    <t t-esc="total_quantity"/>
                                                </td>
                                                <td width="7%">
                                                </td>
                                                <td width="3%"
                                                    style=" padding-left:15px; text-align: right; font-weight:bold; font-size:12px;">
                                                    <!--                                                                <t t-esc="total_amount"/>-->
                                                </td>
                                                <td width="8%"
                                                    style=" padding-left:15px; text-align: right; font-weight:bold; font-size:15px;">
                                                    <!--                                                                <t t-esc="total_amount"/>-->
                                                </td>
                                                <td width="8%"
                                                    style=" padding-right:30px; text-align: right; font-weight:bold; font-size:14px;">
                                                    <t t-esc="total_amount"/>
                                                </td>
                                                <td width="10%"
                                                    style=" padding-left:20px; text-align: right; font-weight:bold; font-size:14px;">
                                                    <t t-esc="after_dic"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="container" style="margin-top:20px;">
                                    <div class="row justify-content-end" style="height:11px;margin-bottom:13px;">
                                        <div class="col-6" style="font-size:14px;text-align:right; ">
                                            <p style="font-weight:bold; ">Net Payable :</p>
                                        </div>
                                        <div class="col-3" style="margin-top:-7px;">
                                            <p style="text-align:right;">
                                                <span t-field="o.amount_untaxed"/>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row justify-content-end" style="height:11px;margin-bottom:10px;">
                                        <div class="col-3" style="font-size:13px;text-align:right;">
                                            <p style="font-weight:bold;">Tax 0.00 % :</p>
                                        </div>
                                        <div class="col-3" style="margin-top:-7px;">
                                            <p style="text-align:right;">
                                                <span t-raw="o.amount_tax"/>
                                                <!--                                            <span t-field="o.display_price"/>-->
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                        <div class="col-3"
                                             style="font-size:13px;text-align:right;padding-right:88px; ">
                                            <p style="font-weight:bold;">Freight :</p>
                                        </div>
                                        <div class="col-2"
                                             style="margin-top:0px; border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                            <p style="text-align:right;margin-top:-8px">
                                                000
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="container">
                                    <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                        <div class="col-3"
                                             style="font-size:13px;text-align:right; padding-right:88px; ">
                                            <p style="font-weight:bold;">Balance :</p>
                                        </div>
                                        <div class="col-2"
                                             style="margin-top:-7px;border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                            <p style="text-align:right; font-weight:bold; margin-top:-1px;">
                                                000
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="container" style="margin-top:-22px;">
                                    <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                        <div class="col-2"
                                             style="font-size:13px;text-align:right; padding-right:110px; ">
                                            <p style="font-weight:bold;"></p>
                                        </div>
                                        <div class="col-2"
                                             style="margin-top:-7px;border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                            <p style="text-align:right; font-weight:bold; margin-top:-2px;">
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container row" style="margin-top:4em; font-size:15px">
                                <div class="col-4">
                                    __________________________________
                                </div>
                                <div class="col-4">
                                    __________________________________
                                </div>
                                <div class="col-4">
                                    __________________________________
                                </div>
                            </div>
                            <div class="container row" style="font-size:15px; text-align:center;">
                                <div class="col-4" style="margin-left:10px;">
                                    <strong>Sale Consultant</strong>
                                </div>
                                <div class="col-4">
                                    <strong>Manager</strong>
                                </div>
                                <div class="col-4">
                                    <strong>Customer</strong>
                                </div>
                            </div>
                            <div class="container">
                                <div>
                                    <div class="col-12" style="padding-left:0px; margin-right:30px;">
                                        <p style="font-weight:bold;color:black; font-size:15px;">Note:</p>
                                        <p>
                                            <div class="col-12" style="padding-left:25px;margin-top:20px;">
                                                Modified By:
                                                <span t-field="o.user_id.name"/>
                                                Date:
                                                <span t-field="o.create_date"/>
                                                Created By:
                                                <span t-field="o.write_uid.name"/>
                                                Date
                                                <span t-field="o.write_date"/>
                                            </div>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>


        <!-- here we customized the height and width of the logo -->
        <template t-name="web.external_layout_standard">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style" height="10%"
                 width="100%">
                <div class="row" id="logo_center">
                    <div class="col-12 mb10">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                </div>
            </div>
            <!-- support for custom footer -->
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout" position="attributes"
                 id="footer">
                <attribute name="t-if">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-6" id="footer_center">
                            <!-- here you can put your footer line -->
                        </div>
                        <div class="col-3"></div>
                    </div>
                </attribute>
            </div>
            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout" position="after">
                <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                    <t t-if="custom_footer" t-raw="custom_footer"/>
                </div>
            </div>
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <xpath expr="." position="inside">
                        <link rel="stylesheet" type="text/css" href="/bookings/static/src/css/pdf_report_style.css"/>
                    </xpath>
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <t t-raw="0"/>
            </div>
        </template>
    </data>
</odoo>
