<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="invoice_smc_without_id">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        .p1{
                        margin-top:-20px;
                        font-size:15px;
                        font-weight:700;

                        }
                        span{
                        margin-top:-20px;
                        font-size:15px;
                        font-weight:normal;
                        <!--                        padding-right:50px;-->
                        }
                        .p2{
                        margin-top:-20px;
                        font-size:12px;
                        padding-right:100px;


                        }
                        .pcen{
                        float:right;
                        font-width:bold;
                        }
                        .r1{
                        border:1px solid
                        }
                        .div_headings {
                        border:1px solid;
                        text-align: center;
                        font-size:15px;
                        margin-top:2em;
                        vertical-align:middle;
                        }
                        .div_tb {
                        border:1px solid;
                        text-align: center;
                        font-size:10px;
                        }
                        table tr{
                        <!--                        height:10%;-->
                        }

                    </style>


                    <div class="container">
                        <div class="container">
                            <div class="row">
                                <div class="col-9">
                                    <p class="p1">Invoice No.
                                        :<span class='p2' t-field="o.name" style="padding-left:35px;"/>
                                    </p>
                                    <p  class="p1">Invoice Date
                                         :<span class='p2' t-field="o.invoice_date" style="padding-left:25px;"/>
                                    </p>
                                    <p class="p1">Customer
                                        :<span class='p2' t-field="o.partner_id" style="padding-left:45px;"/>
                                    </p>
                                    <p class="p1">Detail
                                        :<span class='p2' t-field="o.partner_id.street" style="padding-left:70px;"/>
                                    </p>
                                </div>
                                <div class="col-3 ">
                                    <p class="p1">Do # :
                                        <!--                                        <span class='p2' t-field="o.invoice_date"/>-->
                                    </p>
                                    <p class="p1">CNIC #
                                        :
                                        <span class='p2' t-field="o.partner_id.no_cnic"/>
                                    </p>
                                    <p class="p1">NTN # :
                                        <span class='p2' t-field="o.partner_id.ntn"/>

                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="container" width="100%">
                            <table class="table table-bordered table-sm " style="margin-top:5px; ">

                                <tr style="font-size:12px;text-align:left;">
                                    <th>
                                        <strong>Sr</strong>
                                    </th>
                                    <th>
                                        <strong>Item Description</strong>
                                    </th>
                                    <th>
                                        <strong>Article</strong>
                                    </th>
                                    <th>
                                        <strong>Finish</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Unit</strong>
                                    </th>
                                    <th>
                                        <strong>Quantity</strong>
                                    </th>
                                    <th>
                                        <strong>Rate</strong>
                                    </th>
                                    <th class="text-center div_headings">
                                        <strong>Amount</strong>
                                    </th>
                                    <th>
                                        <strong>After D.Amnt</strong>

                                    </th>
                                </tr>

                                <tbody>
                                    <t t-set="count_id" t-value="0"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                    <t t-set="total_quantity" t-value="0"/>
                                    <t t-set="total_amount" t-value="0"/>
                                    <t t-set="after_dic" t-value="0"/>


                                    <t t-foreach="o.invoice_line_ids" t-as="line">
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                           groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                           groups="account.group_show_line_subtotals_tax_included"/>

                                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                            style="text-align:center;">
                                            <t t-if="not line.display_type">
                                                <t t-set="count_id" t-value="count_id+1"/>
                                                <td name="td_id" class="text-center"
                                                    style="padding:0px; height:0%; font-size:9px;">
                                                    <t t-esc="count_id"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.name"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.article_no"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_id.finish_no"/>
                                                    <!--                                                    <span t-field="line.partner_id.company_id.finish_no"/>-->
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.product_uom_id"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.quantity"/>
                                                </td>
                                                <td class="div_tb">
                                                    <span t-field="line.price_unit"/>
                                                    <!--                                                    <span t-field="line.product_id.list_price"/>-->
                                                </td>
                                                <td class="div_tb">
                                                    <t t-set="amount_price"
                                                       t-value="(line.price_unit * line.quantity)"/>
                                                    <t t-esc="amount_price"/>
                                                </td>
                                                <td class="all_border">
                                                    <span t-field="line.price_subtotal"/>

                                                    <!--                                                    <t t-set="after_dis"-->
                                                    <!--                                                       t-value="(amount_price - line.discount)"/>-->
                                                    <!--                                                    <t t-esc="after_dis"/>-->
                                                </td>
                                                <t t-set="total_quantity" t-value="total_quantity+line.quantity"/>
                                                <t t-set="total_amount" t-value="total_amount+amount_price"/>
                                                <t t-set="after_dic" t-value="after_dic+line.price_subtotal"/>
                                            </t>



                                            <t t-if="line.display_type == 'line_note'">
                                                <td name="td_note_line" colspan="99" class="div_tb"
                                                    style="padding:0px; height:0%;">
                                                    <!--                                                    <span t-field="line.name"/>-->
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <div class="container">
                                                <table width="100%" style="margin-top:-10px;">
                                                    <tbody>
                                                        <tr>
                                                            <td width="5%">
                                                            </td>
                                                            <td width="25%">
                                                            </td>
                                                            <td width="8%"></td>
                                                            <td width="8%"
                                                                style="font-weight:bold; padding-right:10px; text-align: right; font-size:14px; margin-top:10px">
                                                                Total :
                                                            </td>
                                                            <td width="5%">
                                                            </td>
                                                            <td width="8%"
                                                                style="; padding-left:15px; text-align: right; font-weight:bold; font-size:14px;">
                                                                <t t-esc="total_quantity"/>
                                                            </td>
                                                            <td width="7%">
                                                            </td>
                                                            <td width="3%"
                                                                style=" padding-left:15px; text-align: right; font-weight:bold; font-size:12px;">
                                                                <!--                                                                <t t-esc="total_amount"/>-->
                                                            </td>
                                                            <td width="8%"
                                                                style=" padding-left:15px; text-align: right; font-weight:bold; font-size:15px;">
                                                                <!--                                                                <t t-esc="total_amount"/>-->
                                                            </td>
                                                            <td width="8%"
                                                                style=" padding-right:30px; text-align: right; font-weight:bold; font-size:14px;">
                                                                <t t-esc="total_amount"/>
                                                            </td>
                                                            <td width="10%"
                                                                style=" padding-left:20px; text-align: right; font-weight:bold; font-size:14px;">
                                                                <t t-esc="after_dic"/>

                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                            <div class="container" style="margin-top:20px;">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:13px;">
                                    <div class="col-6" style="font-size:14px;text-align:right; ">
                                        <p style="font-weight:bold; ">Net Payable :</p>
                                    </div>
                                    <div class="col-3" style="margin-top:-7px;">
                                        <p style="text-align:right;">
                                            <span t-field="o.amount_untaxed"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:10px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;">
                                        <p style="font-weight:bold;">Tax 0.00 % :</p>
                                    </div>
                                    <div class="col-3" style="margin-top:-7px;">
                                        <p style="text-align:right;">
                                            <span t-raw="o.amount_tax"/>

                                            <!--                                            <span t-field="o.display_price"/>-->
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right;padding-right:88px; ">
                                        <p style="font-weight:bold;">Freight :</p>
                                    </div>
                                    <div class="col-2"
                                         style="margin-top:0px; border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                        <p style="text-align:right;margin-top:-8px">
                                            000

                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-3" style="font-size:13px;text-align:right; padding-right:88px; ">
                                        <p style="font-weight:bold;">Balance :</p>
                                    </div>
                                    <div class="col-2"
                                         style="margin-top:-7px;border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                        <p style="text-align:right; font-weight:bold; margin-top:-1px;">
                                            000

                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="container" style="margin-top:-22px;">
                                <div class="row justify-content-end" style="height:11px;margin-bottom:15px;">
                                    <div class="col-2" style="font-size:13px;text-align:right; padding-right:110px; ">
                                        <p style="font-weight:bold;"></p>
                                    </div>
                                    <div class="col-2"
                                         style="margin-top:-7px;border-bottom:1px solid black; border-top:1px solid white;border-right:1px solid white;border-left:1px solid white;">
                                        <p style="text-align:right; font-weight:bold; margin-top:-2px;">
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="container row" style="margin-top:4em; font-size:15px">
                            <div class="col-4">
                                __________________________________
                            </div>
                            <div class="col-4">
                                __________________________________
                            </div>
                            <div class="col-4">
                                __________________________________
                            </div>
                        </div>
                        <div class="container row" style="font-size:15px; text-align:center;">
                            <div class="col-4" style="margin-left:10px;">
                                <strong>Sale Consultant</strong>
                            </div>
                            <div class="col-4">
                                <strong>Manager</strong>
                            </div>
                            <div class="col-4">
                                <strong>Customer</strong>
                            </div>
                        </div>
                        <div class="container">
                            <div>
                                <div class="col-12" style="padding-left:0px; margin-right:30px;">
                                    <p style="font-weight:bold;color:black; font-size:15px;">Note:</p>
                                </div>
                            </div>

                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
