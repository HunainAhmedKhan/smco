<odoo>
    <data>

        <record model="ir.ui.view" id="smc_project.list">
            <field name="name">smc_project_list</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="sale_discontinued"/>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='561']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="smc_product_productt">
            <field name="name">smc_project_list</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="sale_discontinued"/>
                </xpath>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//button[@name='561']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="stock_status">
            <field name="name">stock_invoice_status</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="invoice_status"/>
                </xpath>
                <xpath expr="//button[@name='button_validate']" position='attributes'
                       attrs="{'invisible': [('invoice_status', '!=', 'paid')]}"/>
            </field>
        </record>


        <record model="ir.ui.view" id="stock_sale__status">
            <field name="name">sale_invoice_status</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="replace">
                    <button name="action_confirm" states="sent,sale,manager,ceo,draft" string="Confirm Sale"
                            class="btn-primary o_sale_confirm" type="object"/>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" states="draft,sent,sale,ceo,manager" type="object"
                            string="Cancel"/>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="replace">
                    <button name="action_confirm" states="sent,manager,draft" string="Confirm Sale"
                            class="btn-primary o_sale_confirm" type="object" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="after">
                    <button name="from_manager_approval" states="draft,sent" type="object" class="oe_highlight"
                            string="Approval From Manager"/>
                    <button name="from_ceo_approval" states="manager" type="object" class="oe_highlight"
                            string="Approval From CEO"/>
                </xpath>


                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="invoice_status"/>
                </xpath>


                <xpath expr="//button[@name='action_view_delivery']" position="replace">
                    <button type="object"
                            name="action_view_delivery"
                            class="oe_stat_button"
                            icon="fa-truck"
                            attrs="{'invisible': [('invoice_status', '!=', 'invoiced')]}" >
                        <field name="delivery_count" widget="statinfo" string="Delivery"/>
                    </button>
                </xpath>


            </field>
        </record>

        <record id="contact_inherit" model="ir.ui.view">
            <field name="name">invoic.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='ref']" position="after">
                    <field name="delivery_order"/>
                </xpath>

            </field>
        </record>

        <record id="users_inherit" model="ir.ui.view">
            <field name="name">users.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="after">
                    <page string="Sale Approval">
                        <group>
                            <group>
                                <field name="allowed_discount"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="sales_inherit" model="ir.ui.view">
            <field name="name">sale.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="max_discount"/>
                    <field name="allowed_discount"/>
                    <field name="user_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_tree_extend" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="replace">
                    <field name="state"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>